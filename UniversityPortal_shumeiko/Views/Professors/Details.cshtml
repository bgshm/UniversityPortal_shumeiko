@model UniversityPortal_shumeiko.Models.Professor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <h4>Courses Taught</h4>
    @if (Model.Courses != null && Model.Courses.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Credits</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td>@course.Title</td>
                        <td>@course.Credits</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>This professor is not currently teaching any courses.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
